<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ssengel.wordpool">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".helper.MyVolley"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_512dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_512dp"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustNothing">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateWordActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PoolDetailActivity" />
        <activity android:name=".WordDetailActivity"></activity>
    </application>

</manifest>