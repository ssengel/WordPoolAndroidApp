<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:layout_marginBottom="55dp"
    tools:context=".pages.RandomFragment">


    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:id="@+id/flipView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flipDuration="300"
        app:flipEnabled="true"
        app:flipFrom="right"
        app:flipType="horizontal"
        android:clickable="true">

        <!-- Back Layout Goes Here -->
        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/card_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/windowBackground"
            app:cardCornerRadius="@dimen/card_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:padding="20dp"
                    android:background="@color/windowBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/txtTr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tikla"
                        android:textColor="@color/colorGray"
                        android:textSize="30dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="11"
                    android:background="#393d43">
                    <View
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="#FBBC05" />

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- Front Layout Goes Here -->
        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/card_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/windowBackground"
            app:cardCornerRadius="@dimen/card_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:padding="20dp"
                    android:background="@color/windowBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_above="@+id/txtEng"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/imgCategory"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_electronic" />

                    <TextView

                        android:layout_centerInParent="true"
                        android:id="@+id/txtEng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click ?"
                        android:textColor="@color/colorGray"
                        android:textSize="30dp" />
                    <View
                        android:layout_marginTop="10dp"
                        android:id="@+id/line"
                        android:layout_below="@+id/txtEng"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/line"
                        android:gravity="center_horizontal"
                        android:id="@+id/txtSentence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="How to attack click listener to view ?"
                        android:textSize="17dp" />


                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="11"
                    android:background="@color/colorOrance">
                    <View
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="#393d43" />

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </com.wajahatkarim3.easyflipview.EasyFlipView>


</FrameLayout>

