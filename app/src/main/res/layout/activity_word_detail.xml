<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorWordDetail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.WordDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/card_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/windowBackground"
            app:cardCornerRadius="@dimen/card_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:padding="20dp"
                    android:background="@color/windowBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_above="@+id/txtEng"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/imgCategory"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_electronic" />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/txtEng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click"
                        android:textColor="@color/colorGray"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/txtTr"
                        android:layout_centerInParent="true"
                        android:layout_below="@id/txtEng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tikla"
                        android:textColor="@color/colorGray"
                        android:textSize="30dp" />
                    <View
                        android:layout_marginTop="10dp"
                        android:id="@+id/line"
                        android:layout_below="@+id/txtTr"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/line"
                        android:gravity="center_horizontal"
                        android:id="@+id/txtSentence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="How to attack click listener to view ?"
                        android:textSize="17dp" />
                    <TextView
                        android:id="@+id/wordId"
                        android:layout_below="@+id/txtSentence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="11"
                    android:background="#393d43">
                    <View
                        android:id="@+id/line2"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@color/colorGray" />
                    <LinearLayout
                        android:layout_below="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/btnGotIt"
                                android:layout_width="@dimen/ic_delete"
                                android:layout_height="@dimen/ic_delete"
                                android:background="@android:drawable/btn_star_big_off"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:text="Got it"
                                android:layout_below="@id/btnGotIt"
                                android:layout_centerInParent="true"
                                android:textColor="@color/colorWhite"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/btnEdit"
                                android:layout_width="@dimen/ic_delete"
                                android:layout_height="@dimen/ic_delete"
                                android:background="@android:drawable/ic_menu_edit"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:text="Edit"
                                android:layout_below="@id/btnEdit"
                                android:layout_centerInParent="true"
                                android:textColor="@color/colorWhite"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/btnDelete"
                                android:layout_width="@dimen/ic_delete"
                                android:layout_height="@dimen/ic_delete"
                                android:background="@android:drawable/ic_menu_delete"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:text="Delete"
                                android:layout_below="@id/btnDelete"
                                android:layout_centerInParent="true"
                                android:textColor="@color/colorWhite"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>